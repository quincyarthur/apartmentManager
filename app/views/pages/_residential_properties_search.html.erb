<%= form_tag residential_properties_path, method: :get, class: "form-horizontal" do %>
	   <div class="form-group">
   	  	<%= label_tag :island_id, nil, class: "control-label"%><br />
    	   <%= select_tag :island_id,  options_from_collection_for_select(Island.all, 'id', 'name'), class: "form-control" %>
     </div>
    
     <div class="form-group">
        <%= label_tag :num_bedrooms, nil, class: "control-label"%><br />
        <%= number_field_tag :num_bedrooms, nil, min: 1, class: "form-control" %>
      </div>

     <div class="form-group">
      <%= label_tag :num_bathrooms, nil, class: "control-label"%><br />
      <%= number_field_tag :num_bathrooms, nil, min: 1, class: "form-control" %>
    </div>

    <div class="row">
        <div>
           <label class="control-label">Price Range</label>
        </div>

        <div class="form-group col-md-6" >
            <%= number_field_tag :min_monthly_amt, nil, min: 1, class: "form-control", placeholder: "Minimum Monthly Amount" %>
        </div>

        <div class="form-group col-md-6">
            <%= number_field_tag :max_monthly_amt, nil, min: 1, class: "form-control", placeholder: "Maximum Monthly Amount" %>
        </div>
    </div>


  	<div class="form-group">
    	<%= submit_tag 'Search Residential Properies', class: "btn btn-default"%>
  	</div>
<%end%>
